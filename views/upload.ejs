<body>
    <div class="page">
        <div class="container">
            <div class="form">
                <form action="/upload" method="POST" enctype="multipart/form-data">
                    <h1 class="heading">
                        SHARE
                    </h1>
                    <label for="name_story">Name your story:</label>
                    <div class="input-story">
                        <textarea name="title" id="name_story" placeholder="Enter your story title"></textarea>
                    </div>
                    <label for="challenge">What was your challenge?</label>
                    <div class="input-challenge">
                        <textarea name="challenge" id="challenge" placeholder="Enter your challenge"></textarea>
                    </div>
                    <label for="solution">How did you solve it?</label>
                    <div class="input-solution">
                        <textarea name="solution" id="solution" placeholder="Enter your solution"></textarea>
                    </div>
                    <label for="uploaded" class="uploaded">Upload Media</label>
                    <input type="file" name="file" id="uploaded">
                    <div class="submit">
                        <input type="submit" value="Share" 
                            style="    color: #fff;
                            background-color: #6B69E2;
                            font-weight: 600;
                            font-size: 18px;
                            margin-top: 20px;
                            padding: 10px 20px;
                            border-radius: 15px;
                            cursor: pointer;
                            display: inline-block;
                            transition: background-color 0.3s, color 0.3s;">
                    </div>
                </form>
            </div>
        </div>
    </div>

